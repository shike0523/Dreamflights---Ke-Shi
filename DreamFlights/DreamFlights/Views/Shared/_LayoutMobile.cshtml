@using Microsoft.AspNetCore.Identity
@using DreamFlights.Models
@using System.Text.RegularExpressions;

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DreamFlights</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        @* Added for language select with image *@
        @*<link href="~/ViewLibaries/HomeIndex/LanguageSelect/StyleSheet.css" rel="stylesheet" />
            <script src="~/ViewLibaries/HomeIndex/LanguageSelect/JavaScript.js"></script>*@
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        @if (SignInManager.IsSignedIn(User))
        {
            //Ragular expression, that cuts email postfix from a user name.
            string pattern = @"@.+";
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">

                <div class="pull-right">
                    <div style="float:left">
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@Regex.Replace(UserManager.GetUserName(User), pattern, String.Empty)</a>
                    </div>
                    <div style="float:left">
                        <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
                    </div>
                </div>

            </form>
        }
        else
        {
            <div class="pull-right">
                @*<button id="clickme2" onclick="PopupCenter('/Identity/Account/Login','xtf','390','600')" type="button" class="btn btn-warning btn-space" style="width:90px;float:left">@Localizer["Login"]</button>*@  <!--这里用的是上面css的margin-->
                <input type="button" class="btn btn-warning btn-space" style="width:120px" value="@Localizer["Login in"]"
                       onclick="window.location.href ='/Identity/Account/LoginMobile'" />
            </div>
            <script>
